{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": [
      "reflect-metadata",
      "node"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}